<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:backgroundTint="#000000"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvResultado"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:background="#000"
        android:gravity="right|center_vertical"
        android:text="0"
        android:textColor="#FFF"
        android:textSize="80dp"
        app:layout_constraintBottom_toTopOf="@+id/glh2"
        app:layout_constraintEnd_toStartOf="@+id/gl5"
        app:layout_constraintStart_toStartOf="@+id/gl1"
        app:layout_constraintTop_toTopOf="@+id/glh1" />

    <Button
        android:id="@+id/btAC"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:text="AC"
        android:textSize="30dp"
        android:textColor="@color/black"
        app:cornerRadius="36dp"
        android:backgroundTint="#B8B8B8"
        app:layout_constraintBottom_toTopOf="@+id/glh3"
        app:layout_constraintEnd_toStartOf="@+id/gl2"
        app:layout_constraintStart_toStartOf="@+id/gl1"
        app:layout_constraintTop_toTopOf="@+id/glh2"
        app:layout_constraintVertical_bias="0.344" />

    <Button
        android:id="@+id/btCambioSigno"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:text="+/-"
        android:textSize="30dp"
        android:textColor="@color/black"
        app:cornerRadius="36dp"
        android:backgroundTint="#B8B8B8"
        app:layout_constraintBottom_toTopOf="@+id/glh3"
        app:layout_constraintEnd_toStartOf="@+id/gl3"
        app:layout_constraintStart_toStartOf="@+id/gl2"
        app:layout_constraintTop_toTopOf="@+id/glh2" />

    <Button
        android:id="@+id/btPorentaje"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:text="%"
        android:textSize="30dp"
        android:textColor="@color/black"
        app:cornerRadius="160px"
        android:backgroundTint="#B8B8B8"
        app:layout_constraintBottom_toTopOf="@+id/glh3"
        app:layout_constraintEnd_toStartOf="@+id/gl4"
        app:layout_constraintStart_toStartOf="@+id/gl3"
        app:layout_constraintTop_toTopOf="@+id/glh2" />

    <Button
        android:id="@+id/btDivision"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:text="/"
        android:textSize="30dp"
        android:textColor="@color/white"
        app:cornerRadius="180dp"
        android:backgroundTint="#FF9800"
        app:layout_constraintBottom_toTopOf="@+id/glh3"
        app:layout_constraintEnd_toStartOf="@+id/gl5"
        app:layout_constraintStart_toStartOf="@+id/gl4"
        app:layout_constraintTop_toTopOf="@+id/glh2" />

    <Button
        android:id="@+id/bt7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:backgroundTint="#4A4A4A"
        android:text="7"
        android:textSize="30dp"
        app:cornerRadius="160px"
        app:layout_constraintBottom_toTopOf="@+id/glh4"
        app:layout_constraintEnd_toStartOf="@+id/gl2"
        app:layout_constraintStart_toStartOf="@+id/gl1"
        app:layout_constraintTop_toTopOf="@+id/glh3" />

    <Button
        android:id="@+id/bt8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:backgroundTint="#4A4A4A"
        android:text="8"
        android:textSize="30dp"
        app:cornerRadius="160px"
        app:layout_constraintBottom_toTopOf="@+id/glh4"
        app:layout_constraintEnd_toStartOf="@+id/bt9"
        app:layout_constraintStart_toStartOf="@+id/gl2"
        app:layout_constraintTop_toBottomOf="@+id/btCambioSigno" />

    <Button
        android:id="@+id/bt9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:backgroundTint="#4A4A4A"
        android:text="9"
        android:textSize="30dp"
        app:cornerRadius="160px"
        app:layout_constraintBottom_toTopOf="@+id/glh4"
        app:layout_constraintEnd_toStartOf="@+id/btx"
        app:layout_constraintStart_toStartOf="@+id/gl3"
        app:layout_constraintTop_toBottomOf="@+id/btPorentaje" />

    <Button
        android:id="@+id/btx"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:backgroundTint="#FF9800"
        android:text="*"
        android:textSize="30dp"
        app:cornerRadius="160px"
        app:layout_constraintBottom_toTopOf="@+id/glh4"
        app:layout_constraintEnd_toStartOf="@+id/gl5"
        app:layout_constraintStart_toStartOf="@+id/gl4"
        app:layout_constraintTop_toBottomOf="@+id/btDivision" />

    <Button
        android:id="@+id/bt4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:backgroundTint="#4A4A4A"
        android:text="4"
        android:textSize="30dp"
        app:cornerRadius="160px"
        app:layout_constraintBottom_toTopOf="@+id/glh5"
        app:layout_constraintEnd_toStartOf="@+id/gl2"
        app:layout_constraintStart_toStartOf="@+id/gl1"
        app:layout_constraintTop_toBottomOf="@+id/bt7" />

    <Button
        android:id="@+id/bt5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:backgroundTint="#4A4A4A"
        android:text="5"
        android:textSize="30dp"
        app:cornerRadius="160px"
        app:layout_constraintBottom_toTopOf="@+id/glh5"
        app:layout_constraintEnd_toStartOf="@+id/bt6"
        app:layout_constraintStart_toStartOf="@+id/gl2"
        app:layout_constraintTop_toTopOf="@+id/glh4" />

    <Button
        android:id="@+id/bt6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:backgroundTint="#4A4A4A"
        android:text="6"
        android:textSize="30dp"
        app:cornerRadius="160px"
        app:layout_constraintBottom_toTopOf="@+id/glh5"
        app:layout_constraintEnd_toStartOf="@+id/btResta"
        app:layout_constraintStart_toStartOf="@+id/gl3"
        app:layout_constraintTop_toBottomOf="@+id/bt9" />

    <Button
        android:id="@+id/btResta"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:backgroundTint="#FF9800"
        android:text="-"
        android:textSize="30dp"
        app:cornerRadius="160px"
        app:layout_constraintBottom_toTopOf="@+id/glh5"
        app:layout_constraintEnd_toStartOf="@+id/gl5"
        app:layout_constraintStart_toStartOf="@+id/gl4"
        app:layout_constraintTop_toBottomOf="@+id/btx" />

    <Button
        android:id="@+id/bt1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:backgroundTint="#4A4A4A"
        android:text="1"
        android:textSize="30dp"
        app:cornerRadius="160px"
        app:layout_constraintBottom_toTopOf="@+id/glh6"
        app:layout_constraintEnd_toStartOf="@+id/gl2"
        app:layout_constraintStart_toStartOf="@+id/gl1"
        app:layout_constraintTop_toTopOf="@+id/glh5" />

    <Button
        android:id="@+id/bt2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:backgroundTint="#4A4A4A"
        android:text="2"
        android:textSize="30dp"
        app:cornerRadius="160px"
        app:layout_constraintBottom_toTopOf="@+id/glh6"
        app:layout_constraintEnd_toStartOf="@+id/gl3"
        app:layout_constraintStart_toStartOf="@+id/gl2"
        app:layout_constraintTop_toTopOf="@+id/glh5" />

    <Button
        android:id="@+id/bt3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:backgroundTint="#4A4A4A"
        android:text="3"
        android:textSize="30dp"
        app:cornerRadius="160px"
        app:layout_constraintBottom_toTopOf="@+id/glh6"
        app:layout_constraintEnd_toStartOf="@+id/gl4"
        app:layout_constraintStart_toStartOf="@+id/gl3"
        app:layout_constraintTop_toTopOf="@+id/glh5" />

    <Button
        android:id="@+id/btSuma"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:backgroundTint="#FF9800"
        android:text="+"
        android:textSize="30dp"
        app:cornerRadius="160px"
        app:layout_constraintBottom_toTopOf="@+id/glh6"
        app:layout_constraintEnd_toStartOf="@+id/gl5"
        app:layout_constraintStart_toStartOf="@+id/gl4"
        app:layout_constraintTop_toTopOf="@+id/glh5" />

    <Button
        android:id="@+id/bt0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:backgroundTint="#4A4A4A"
        android:text="0"
        android:textSize="30dp"
        app:cornerRadius="160px"
        app:layout_constraintBottom_toTopOf="@+id/glh7"
        app:layout_constraintEnd_toStartOf="@+id/gl3"
        app:layout_constraintStart_toStartOf="@+id/gl1"
        app:layout_constraintTop_toTopOf="@+id/glh6" />

    <Button
        android:id="@+id/btComa"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:backgroundTint="#4A4A4A"
        android:text=","
        android:textSize="30dp"
        app:cornerRadius="160px"
        app:layout_constraintBottom_toTopOf="@+id/glh7"
        app:layout_constraintEnd_toStartOf="@+id/gl4"
        app:layout_constraintStart_toStartOf="@+id/gl3"
        app:layout_constraintTop_toTopOf="@+id/glh6" />

    <Button
        android:id="@+id/btIgual"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:backgroundTint="#FF9800"
        android:text="="
        android:textSize="30dp"
        app:cornerRadius="160px"
        app:layout_constraintBottom_toTopOf="@+id/glh7"
        app:layout_constraintEnd_toStartOf="@+id/gl5"
        app:layout_constraintStart_toStartOf="@+id/gl4"
        app:layout_constraintTop_toTopOf="@+id/glh6" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="1.0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glh1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glh2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glh3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.40" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glh4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.55" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glh5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.70" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glh6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.85" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/glh7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>